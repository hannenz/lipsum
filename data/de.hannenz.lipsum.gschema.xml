<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/de/hannenz/lipsum/" id="de.hannenz.lipsum">
    <key name="dark-style" type="b">
      <default>false</default>
      <summary>Prefer dark style</summary>
      <description>Switches between dark and light style</description>
    </key>
    <key name="window-position" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window position</summary>
      <description>Most recent window position (x, y)</description>
    </key>
    <key name="window-size" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window size</summary>
      <description>Most recent window size (width, height)</description>
    </key>
	<key name="count" type="i">
		<default>1</default>
		<summary>Amount</summary>
		<description>Amount of dummy text units to generate (paragraphs, sentences, words, characters)</description>
	</key>
  </schema>
</schemalist>

